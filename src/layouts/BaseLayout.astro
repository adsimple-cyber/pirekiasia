---
/**
 * BaseLayout - Main layout wrapper for all pages
 * CV Pireki Asia - Soundproof Room Partitions
 */
import "../styles/global.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import WhatsAppFAB from "../components/WhatsAppFAB.astro";
import SocialProof from "../components/SocialProof.astro";
import AnimatedBackground from "../components/AnimatedBackground.astro";

// Supports weights 100-900
import "@fontsource/inter/400.css";
import "@fontsource/inter/600.css";
import "@fontsource/inter/700.css";
import "@fontsource/inter/800.css";

interface Props {
  title: string;
  description?: string;
  image?: string;
}

const {
  title,
  description = "CV Pireki Asia - Spesialis partisi ruangan redam suara. Manufaktur movable wall dan pintu lipat terbaik di Indonesia.",
  image = "/og-image.jpg",
} = Astro.props;

const siteUrl = import.meta.env.SITE_URL || "https://cvpirekiasia.com";
const canonicalUrl = new URL(Astro.url.pathname, siteUrl);
---

<!doctype html>
<html lang="id">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />

    <!-- Preconnect to critical origins -->
    <link rel="dns-prefetch" href="https://www.youtube.com" />
    <link rel="dns-prefetch" href="https://images.unsplash.com" />

    <!-- Critical CSS for LCP (Hero H1) - Inline for immediate render -->
    <style is:inline>
      /* Critical font fallback - prevents FOIT */
      body {
        font-family:
          "Inter",
          -apple-system,
          BlinkMacSystemFont,
          "Segoe UI",
          Roboto,
          sans-serif;
        margin: 0;
        background-color: #f8fafc;
      }

      /* Hero section critical styles - LCP optimization */
      .hero-h1 {
        font-size: 2.25rem;
        font-weight: 800;
        color: #ffffff;
        line-height: 1.15;
        margin-bottom: 1.5rem;
        letter-spacing: -0.025em;
      }
      @media (min-width: 768px) {
        .hero-h1 {
          font-size: 3.75rem;
        }
      }

      /* Critical layout CSS to prevent layout shift */
      .container {
        width: 100%;
        max-width: 1280px;
        margin-left: auto;
        margin-right: auto;
        padding-left: 1rem;
        padding-right: 1rem;
      }

      /* Navbar placeholder to prevent CLS */
      #navbar {
        position: fixed;
        width: 100%;
        z-index: 50;
        padding: 1rem 0;
      }

      /* Hero bg color to reduce perceived load time */
      section:first-of-type {
        background-color: #072181;
        min-height: 100vh;
      }
    </style>

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <meta
      name="google-site-verification"
      content="XczM3ee8WGnLrrlCcfZiJ4Z3ppwNma69x6J9pI4jXPY"
    />

    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalUrl} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={`${siteUrl}${image}`} />
    <meta property="og:site_name" content="CV Pireki Asia" />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalUrl} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={`${siteUrl}${image}`} />

    <title>{title} | CV Pireki Asia</title>

    <!-- JSON-LD Structured Data for Google Search -->
    <script type="application/ld+json" is:inline>
      {
        "@context": "https://schema.org",
        "@type": "WebSite",
        "name": "CV Pireki Asia",
        "alternateName": ["Pireki Asia", "Pireki"],
        "url": "https://cvpirekiasia.com",
        "potentialAction": {
          "@type": "SearchAction",
          "target": "https://cvpirekiasia.com/search?q={search_term_string}",
          "query-input": "required name=search_term_string"
        }
      }
    </script>
  </head>
  <body class="font-sans text-slate-900 antialiased bg-gray-50 relative">
    <Header />

    <main>
      <slot />
    </main>

    <Footer />
    <WhatsAppFAB />
    <SocialProof />

    <!-- Scroll-based navbar script -->
    <script>
      const navbar = document.getElementById("navbar");

      function handleScroll() {
        if (navbar) {
          if (window.scrollY > 50) {
            navbar.classList.add(
              "bg-[#072181]/90",
              "backdrop-blur-md",
              "shadow-xl",
              "py-2",
            );
            navbar.classList.remove("bg-transparent", "py-4");
          } else {
            navbar.classList.remove(
              "bg-[#072181]/90",
              "backdrop-blur-md",
              "shadow-xl",
              "py-2",
            );
            navbar.classList.add("bg-transparent", "py-4");
          }
        }
      }

      window.addEventListener("scroll", handleScroll);
      handleScroll(); // Run on initial load
    </script>
  </body>
</html>
