---
/**
 * BaseLayout - Main layout wrapper for all pages
 * CV Pireki Asia - Soundproof Room Partitions
 */
import "../styles/global.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import WhatsAppFAB from "../components/WhatsAppFAB.astro";
import SocialProof from "../components/SocialProof.astro";
import AnimatedBackground from "../components/AnimatedBackground.astro";

interface Props {
  title: string;
  description?: string;
  image?: string;
}

const {
  title,
  description = "CV Pireki Asia - Spesialis partisi ruangan kedap suara. Manufaktur movable wall dan pintu lipat terbaik di Indonesia.",
  image = "/og-image.jpg",
} = Astro.props;

const siteUrl = import.meta.env.SITE_URL || "https://cvpirekiasia.com";
const canonicalUrl = new URL(Astro.url.pathname, siteUrl);
---

<!doctype html>
<html lang="id">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalUrl} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={`${siteUrl}${image}`} />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalUrl} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={`${siteUrl}${image}`} />

    <!-- Google Fonts - Inter -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&display=swap"
      rel="stylesheet"
    />

    <title>{title} | CV Pireki Asia</title>
  </head>
  <body class="font-sans text-slate-900 antialiased bg-gray-50 relative">
    <Header />

    <main>
      <slot />
    </main>

    <Footer />
    <WhatsAppFAB />
    <SocialProof />

    <!-- Scroll-based navbar script -->
    <script>
      const navbar = document.getElementById("navbar");

      function handleScroll() {
        if (navbar) {
          if (window.scrollY > 50) {
            navbar.classList.add(
              "bg-[#072181]/90",
              "backdrop-blur-md",
              "shadow-xl",
              "py-2",
            );
            navbar.classList.remove("bg-transparent", "py-4");
          } else {
            navbar.classList.remove(
              "bg-[#072181]/90",
              "backdrop-blur-md",
              "shadow-xl",
              "py-2",
            );
            navbar.classList.add("bg-transparent", "py-4");
          }
        }
      }

      window.addEventListener("scroll", handleScroll);
      handleScroll(); // Run on initial load
    </script>
  </body>
</html>
