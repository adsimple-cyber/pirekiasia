---
/**
 * Benefits Section Component
 * Stacked benefit cards with hover images
 */

const benefits = [
  {
    title: "Redam Suara",
    desc: "Privasi total dengan Rockwool 100kg/mÂ³. Suara tidak bocor antar ruangan.",
    icon: "volume",
    image: "https://images.unsplash.com/photo-1497366216548-37526070297c?auto=format&fit=crop&q=80&w=600"
  },
  {
    title: "Material Premium",
    desc: "Rangka Hollow Galvanis & Multiplek Meranti. Anti-rayap, kokoh puluhan tahun.",
    icon: "layers",
    image: "https://images.unsplash.com/photo-1558618666-fcd25c85cd64?auto=format&fit=crop&q=80&w=600"
  },
  {
    title: "Desain Custom",
    desc: "Finishing HPL/Wallpaper Custom. Estetika yang menyatu dengan interior.",
    icon: "palette",
    image: "https://images.unsplash.com/photo-1497366811353-6870744d04b2?auto=format&fit=crop&q=80&w=600"
  },
  {
    title: "Pemasangan Profesional",
    desc: "Teknisi ISO & Garansi Resmi. Pengerjaan cepat, rapi, dan presisi.",
    icon: "hammer",
    image: "https://images.unsplash.com/photo-1504307651254-35680f356dfd?auto=format&fit=crop&q=80&w=600"
  }
];
---

<section class="py-24 bg-gray-50 overflow-hidden">
  <div class="container mx-auto px-4 md:px-6">
    <!-- Section Header -->
    <div class="text-center max-w-2xl mx-auto mb-16">
      <h2 class="text-[#072181] font-bold text-sm uppercase tracking-widest mb-3">Keunggulan Kami</h2>
      <h3 class="text-3xl md:text-4xl font-bold text-slate-900 tracking-tight">Standar Kualitas Terbaik</h3>
      <div class="w-16 h-1 bg-[#072181] mx-auto mt-6"></div>
    </div>
    
    <!-- Stacked Cards -->
    <div class="max-w-5xl mx-auto space-y-4">
      {benefits.map((benefit, idx) => (
        <div 
          class="benefit-card sticky bg-white rounded-2xl shadow-lg border border-gray-100 transition-all duration-500 overflow-hidden group"
          style={`top: calc(6rem + ${idx * 2}rem); z-index: ${idx + 10};`}
        >
          <div class="flex items-center justify-between p-6 md:p-8">
            <!-- Left: Number + Title + Description -->
            <div class="flex items-center gap-6 flex-1">
              <span class="text-slate-300 font-bold text-2xl md:text-3xl">0{idx + 1}.</span>
              <div>
                <h4 class="text-xl md:text-2xl font-bold text-slate-900 tracking-tight group-hover:text-[#072181] transition-colors">{benefit.title}</h4>
                <p class="text-slate-500 text-sm md:text-base mt-1 max-w-md">{benefit.desc}</p>
              </div>
            </div>
            
            <!-- Right: Arrow -->
            <div class="w-10 h-10 rounded-full border border-slate-200 flex items-center justify-center group-hover:bg-[#072181] group-hover:border-[#072181] transition-all">
              <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-slate-400 group-hover:text-white group-hover:rotate-45 transition-all">
                <path d="M7 17L17 7"/>
                <path d="M7 7h10v10"/>
              </svg>
            </div>
          </div>
          
          <!-- Hover Image -->
          <div class="absolute right-20 top-1/2 -translate-y-1/2 w-64 h-40 rounded-xl overflow-hidden shadow-2xl opacity-0 group-hover:opacity-100 scale-90 group-hover:scale-100 rotate-3 group-hover:rotate-6 transition-all duration-500 pointer-events-none z-20 hidden md:block">
            <img 
              src={benefit.image} 
              alt={benefit.title}
              class="w-full h-full object-cover"
            />
          </div>
        </div>
      ))}
      
      <!-- Extra space at bottom -->
      <div class="h-32"></div>
    </div>
  </div>
</section>

<style>
  .benefit-card {
    position: sticky;
  }
  
  .benefit-card:hover {
    transform: scale(1.01);
    box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.15);
  }
</style>
