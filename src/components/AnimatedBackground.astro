---
/**
 * Animated Background Component
 * Floating shapes and patterns for white sections
 */
---

<div class="animated-bg fixed inset-0 pointer-events-none overflow-hidden z-0">
    <!-- Floating Circles -->
    <div
        class="absolute top-20 left-10 w-64 h-64 rounded-full bg-blue-100/30 blur-3xl animate-float-slow"
    >
    </div>
    <div
        class="absolute top-1/3 right-20 w-48 h-48 rounded-full bg-yellow-100/40 blur-2xl animate-float-delay"
    >
    </div>
    <div
        class="absolute bottom-1/4 left-1/4 w-72 h-72 rounded-full bg-indigo-100/20 blur-3xl animate-float-reverse-slow"
    >
    </div>
    <div
        class="absolute top-1/2 right-1/3 w-32 h-32 rounded-full bg-blue-50/50 blur-xl animate-float"
    >
    </div>

    <!-- Geometric Shapes -->
    <div
        class="absolute top-40 right-1/4 w-4 h-4 bg-blue-200/60 rotate-45 animate-spin-slow"
    >
    </div>
    <div
        class="absolute top-2/3 left-20 w-3 h-3 bg-yellow-300/50 rounded-full animate-pulse-slow"
    >
    </div>
    <div
        class="absolute bottom-40 right-40 w-6 h-6 border-2 border-blue-200/40 rotate-12 animate-spin-reverse"
    >
    </div>
    <div
        class="absolute top-1/4 left-1/3 w-2 h-2 bg-indigo-300/60 rounded-full animate-pulse"
    >
    </div>

    <!-- Dots Pattern -->
    <div class="absolute top-60 left-1/2 w-2 h-2 bg-slate-200/80 rounded-full">
    </div>
    <div
        class="absolute top-80 left-[55%] w-1.5 h-1.5 bg-slate-300/60 rounded-full"
    >
    </div>
    <div
        class="absolute bottom-60 right-1/4 w-2 h-2 bg-blue-200/70 rounded-full animate-pulse-slow"
    >
    </div>
</div>

<style>
    @keyframes float-slow {
        0%,
        100% {
            transform: translateY(0) translateX(0);
        }
        25% {
            transform: translateY(-20px) translateX(10px);
        }
        50% {
            transform: translateY(-10px) translateX(-5px);
        }
        75% {
            transform: translateY(-25px) translateX(5px);
        }
    }

    @keyframes float-delay {
        0%,
        100% {
            transform: translateY(0) translateX(0);
        }
        33% {
            transform: translateY(15px) translateX(-10px);
        }
        66% {
            transform: translateY(-15px) translateX(10px);
        }
    }

    @keyframes float-reverse-slow {
        0%,
        100% {
            transform: translateY(0) translateX(0);
        }
        50% {
            transform: translateY(30px) translateX(-20px);
        }
    }

    @keyframes spin-slow {
        from {
            transform: rotate(45deg);
        }
        to {
            transform: rotate(405deg);
        }
    }

    @keyframes spin-reverse {
        from {
            transform: rotate(12deg);
        }
        to {
            transform: rotate(-348deg);
        }
    }

    @keyframes pulse-slow {
        0%,
        100% {
            opacity: 0.5;
            transform: scale(1);
        }
        50% {
            opacity: 1;
            transform: scale(1.2);
        }
    }

    .animate-float-slow {
        animation: float-slow 20s ease-in-out infinite;
    }

    .animate-float-delay {
        animation: float-delay 15s ease-in-out infinite;
        animation-delay: 2s;
    }

    .animate-float-reverse-slow {
        animation: float-reverse-slow 18s ease-in-out infinite;
    }

    .animate-spin-slow {
        animation: spin-slow 30s linear infinite;
    }

    .animate-spin-reverse {
        animation: spin-reverse 25s linear infinite;
    }

    .animate-pulse-slow {
        animation: pulse-slow 4s ease-in-out infinite;
    }

    .animate-float {
        animation: float 6s ease-in-out infinite;
    }

    @keyframes float {
        0%,
        100% {
            transform: translateY(0);
        }
        50% {
            transform: translateY(-15px);
        }
    }
</style>
