---
/**
 * Stats Section Component
 * Statistics display section
 */

const stats = [
    { value: "10+", label: "Tahun Pengalaman" },
    { value: "500+", label: "Klien Puas" },
    { value: "100+", label: "Produk Terpasang" },
];
---

<section
    class="bg-white py-12 border-b border-gray-100 shadow-sm relative z-20 md:-mt-8 mx-4 md:mx-auto md:max-w-5xl rounded-lg"
>
    <div class="grid grid-cols-3 gap-8 text-center divide-x divide-gray-100">
        {
            stats.map((stat) => (
                <div>
                    <h3 class="text-4xl font-extrabold text-[#072181] tracking-tight">
                        {stat.value}
                    </h3>
                    <p class="text-slate-500 text-xs font-semibold uppercase tracking-wider mt-2">
                        {stat.label}
                    </p>
                </div>
            ))
        }
    </div>
</section>
