---
/**
 * Contact Page - Kontak
 * Contact form and company information
 */
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout
    title="Hubungi Kami"
    description="Hubungi CV Pireki Asia untuk konsultasi, penawaran harga, atau informasi produk partisi ruangan."
>
    <!-- Hero Section -->
    <section class="bg-[#072181] pt-32 pb-20 relative overflow-hidden">
        <div
            class="absolute inset-0 opacity-10"
            style="background-image: radial-gradient(#ffffff 1px, transparent 1px); background-size: 32px 32px;"
        >
        </div>

        <div class="container mx-auto px-4 md:px-6 relative z-10">
            <div class="max-w-3xl">
                <h1
                    class="text-4xl md:text-5xl font-bold text-white mb-6 tracking-tight"
                >
                    Hubungi Kami
                </h1>
                <p class="text-lg text-blue-100/80 leading-relaxed">
                    Siap membantu Anda dengan konsultasi gratis, penawaran
                    harga, atau informasi produk.
                </p>
            </div>
        </div>
    </section>

    <!-- Contact Content -->
    <section class="py-16 bg-white">
        <div class="container mx-auto px-4 md:px-6">
            <div class="grid lg:grid-cols-2 gap-12">
                <!-- Contact Form -->
                <div id="penawaran">
                    <h2 class="text-2xl font-bold text-slate-900 mb-6">
                        Kirim Pesan
                    </h2>

                    <form id="contact-form" class="space-y-6">
                        <div class="grid md:grid-cols-2 gap-6">
                            <div>
                                <label
                                    for="name"
                                    class="block text-sm font-medium text-slate-700 mb-2"
                                >
                                    Nama Lengkap *
                                </label>
                                <input
                                    type="text"
                                    id="name"
                                    name="name"
                                    required
                                    class="w-full h-12 px-4 rounded-lg border border-gray-300 focus:border-[#072181] focus:ring-2 focus:ring-[#072181]/20 outline-none transition-colors"
                                    placeholder="Masukkan nama Anda"
                                />
                            </div>
                            <div>
                                <label
                                    for="company"
                                    class="block text-sm font-medium text-slate-700 mb-2"
                                >
                                    Perusahaan
                                </label>
                                <input
                                    type="text"
                                    id="company"
                                    name="company"
                                    class="w-full h-12 px-4 rounded-lg border border-gray-300 focus:border-[#072181] focus:ring-2 focus:ring-[#072181]/20 outline-none transition-colors"
                                    placeholder="Nama perusahaan (opsional)"
                                />
                            </div>
                        </div>

                        <div class="grid md:grid-cols-2 gap-6">
                            <div>
                                <label
                                    for="email"
                                    class="block text-sm font-medium text-slate-700 mb-2"
                                >
                                    Email *
                                </label>
                                <input
                                    type="email"
                                    id="email"
                                    name="email"
                                    required
                                    class="w-full h-12 px-4 rounded-lg border border-gray-300 focus:border-[#072181] focus:ring-2 focus:ring-[#072181]/20 outline-none transition-colors"
                                    placeholder="email@contoh.com"
                                />
                            </div>
                            <div>
                                <label
                                    for="phone"
                                    class="block text-sm font-medium text-slate-700 mb-2"
                                >
                                    Telepon / WhatsApp *
                                </label>
                                <input
                                    type="tel"
                                    id="phone"
                                    name="phone"
                                    required
                                    class="w-full h-12 px-4 rounded-lg border border-gray-300 focus:border-[#072181] focus:ring-2 focus:ring-[#072181]/20 outline-none transition-colors"
                                    placeholder="08xx-xxxx-xxxx"
                                />
                            </div>
                        </div>

                        <div>
                            <label
                                for="product"
                                class="block text-sm font-medium text-slate-700 mb-2"
                            >
                                Produk yang Diminati
                            </label>
                            <select
                                id="product"
                                name="product"
                                class="w-full h-12 px-4 rounded-lg border border-gray-300 focus:border-[#072181] focus:ring-2 focus:ring-[#072181]/20 outline-none transition-colors bg-white"
                            >
                                <option value="">Pilih produk</option>
                                <option value="sorepa"
                                    >SOREPA - Movable Wall Premium</option
                                >
                                <option value="samowa"
                                    >SAMOWA - Partisi Lipat Standard</option
                                >
                                <option value="nice"
                                    >NICE PARTITION - Ekonomis</option
                                >
                                <option value="folding-gate"
                                    >Folding Gate PVC</option
                                >
                                <option value="other">Lainnya</option>
                            </select>
                        </div>

                        <div>
                            <label
                                for="message"
                                class="block text-sm font-medium text-slate-700 mb-2"
                            >
                                Pesan *
                            </label>
                            <textarea
                                id="message"
                                name="message"
                                rows="5"
                                required
                                class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:border-[#072181] focus:ring-2 focus:ring-[#072181]/20 outline-none transition-colors resize-none"
                                placeholder="Jelaskan kebutuhan Anda (ukuran ruangan, lokasi, dll.)"
                            ></textarea>
                        </div>

                        <button
                            type="submit"
                            class="inline-flex h-12 items-center justify-center rounded-md bg-[#072181] hover:bg-[#05165a] text-white font-bold text-sm uppercase tracking-wide px-8 transition-colors"
                        >
                            Kirim Pesan via WhatsApp
                        </button>
                    </form>
                </div>

                <!-- Contact Info -->
                <div id="lokasi">
                    <h2 class="text-2xl font-bold text-slate-900 mb-6">
                        Informasi Kontak
                    </h2>

                    <div class="space-y-6 mb-8">
                        <div class="flex gap-4">
                            <div
                                class="w-12 h-12 bg-blue-50 text-[#072181] rounded-xl flex items-center justify-center shrink-0"
                            >
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    width="20"
                                    height="20"
                                    viewBox="0 0 24 24"
                                    fill="none"
                                    stroke="currentColor"
                                    stroke-width="2"
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                >
                                    <path
                                        d="M20 10c0 4.993-5.539 10.193-7.399 11.799a1 1 0 0 1-1.202 0C9.539 20.193 4 14.993 4 10a8 8 0 0 1 16 0"
                                    ></path>
                                    <circle cx="12" cy="10" r="3"></circle>
                                </svg>
                            </div>
                            <div>
                                <h4 class="font-bold text-slate-900 mb-1">
                                    Alamat Kantor
                                </h4>
                                <p class="text-slate-600">
                                    Jl. Bangkingan No. 123<br />
                                    Surabaya, Jawa Timur 60231
                                </p>
                            </div>
                        </div>

                        <div class="flex gap-4">
                            <div
                                class="w-12 h-12 bg-blue-50 text-[#072181] rounded-xl flex items-center justify-center shrink-0"
                            >
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    width="20"
                                    height="20"
                                    viewBox="0 0 24 24"
                                    fill="none"
                                    stroke="currentColor"
                                    stroke-width="2"
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                >
                                    <path
                                        d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"
                                    ></path>
                                </svg>
                            </div>
                            <div>
                                <h4 class="font-bold text-slate-900 mb-1">
                                    Telepon
                                </h4>
                                <p class="text-slate-600">0882-3130-9760</p>
                            </div>
                        </div>

                        <div class="flex gap-4">
                            <div
                                class="w-12 h-12 bg-blue-50 text-[#072181] rounded-xl flex items-center justify-center shrink-0"
                            >
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    width="20"
                                    height="20"
                                    viewBox="0 0 24 24"
                                    fill="none"
                                    stroke="currentColor"
                                    stroke-width="2"
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                >
                                    <rect
                                        width="20"
                                        height="16"
                                        x="2"
                                        y="4"
                                        rx="2"></rect>
                                    <path
                                        d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"
                                    ></path>
                                </svg>
                            </div>
                            <div>
                                <h4 class="font-bold text-slate-900 mb-1">
                                    Email
                                </h4>
                                <p class="text-slate-600">
                                    info@cvpirekiasia.com
                                </p>
                            </div>
                        </div>

                        <div class="flex gap-4">
                            <div
                                class="w-12 h-12 bg-[#25D366] text-white rounded-xl flex items-center justify-center shrink-0"
                            >
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    width="20"
                                    height="20"
                                    viewBox="0 0 24 24"
                                    fill="none"
                                    stroke="currentColor"
                                    stroke-width="2"
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                >
                                    <path
                                        d="M21 11.5a8.38 8.38 0 0 1-.9 3.8 8.5 8.5 0 0 1-7.6 4.7 8.38 8.38 0 0 1-3.8-.9L3 21l1.9-5.7a8.38 8.38 0 0 1-.9-3.8 8.5 8.5 0 0 1 4.7-7.6 8.38 8.38 0 0 1 3.8-.9h.5a8.48 8.48 0 0 1 8 8v.5z"
                                    ></path>
                                </svg>
                            </div>
                            <div>
                                <h4 class="font-bold text-slate-900 mb-1">
                                    WhatsApp
                                </h4>
                                <a
                                    href="https://wa.me/6288231309760"
                                    target="_blank"
                                    rel="noopener noreferrer"
                                    class="text-[#25D366] hover:underline"
                                >
                                    Chat sekarang â†’
                                </a>
                            </div>
                        </div>
                    </div>

                    <!-- Operating Hours -->
                    <div
                        class="bg-gray-50 rounded-xl p-6 border border-gray-100"
                    >
                        <h4 class="font-bold text-slate-900 mb-4">
                            Jam Operasional
                        </h4>
                        <ul class="space-y-2 text-slate-600">
                            <li class="flex justify-between">
                                <span>Senin - Jumat</span>
                                <span class="font-medium">08:00 - 17:00</span>
                            </li>
                            <li class="flex justify-between">
                                <span>Sabtu</span>
                                <span class="font-medium">08:00 - 14:00</span>
                            </li>
                            <li class="flex justify-between">
                                <span>Minggu</span>
                                <span class="font-medium text-red-500"
                                    >Tutup</span
                                >
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Map -->
    <section class="bg-gray-50 py-16">
        <div class="container mx-auto px-4 md:px-6">
            <div
                class="rounded-2xl overflow-hidden shadow-lg h-[400px] bg-gray-200"
            >
                <iframe
                    src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d15822.464972583273!2d112.6375681!3d-7.2941913!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x2dd7fd8591555555%3A0x6b49e35555555555!2sCV.%20Pireki%20Asia!5e0!3m2!1sen!2sid!4v1700000000000!5m2!1sen!2sid"
                    width="100%"
                    height="100%"
                    style="border:0;"
                    allowfullscreen=""
                    loading="lazy"
                    referrerpolicy="no-referrer-when-downgrade"
                    title="Lokasi CV Pireki Asia"></iframe>
            </div>
        </div>
    </section>
</BaseLayout>

<script>
    const form = document.getElementById("contact-form") as HTMLFormElement;

    if (form) {
        form.addEventListener("submit", (e) => {
            e.preventDefault();

            const name = (document.getElementById("name") as HTMLInputElement)
                .value;
            const company = (
                document.getElementById("company") as HTMLInputElement
            ).value;
            const email = (document.getElementById("email") as HTMLInputElement)
                .value;
            const phone = (document.getElementById("phone") as HTMLInputElement)
                .value;
            const product = (
                document.getElementById("product") as HTMLSelectElement
            ).value;
            const message = (
                document.getElementById("message") as HTMLTextAreaElement
            ).value;

            const text =
                `Halo Admin Pireki Asia, saya ingin konsultasi:\n\n` +
                `*Nama:* ${name}\n` +
                `*Perusahaan:* ${company || "-"}\n` +
                `*Email:* ${email}\n` +
                `*No. HP:* ${phone}\n` +
                `*Produk:* ${product}\n\n` +
                `*Pesan:* ${message}`;

            const encodedText = encodeURIComponent(text);
            const whatsappUrl = `https://wa.me/6288231309760?text=${encodedText}`;

            window.open(whatsappUrl, "_blank");
        });
    }
</script>
